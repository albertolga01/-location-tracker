<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="308dp"
        android:layout_height="65dp"
        android:fontFamily="@font/alatsi"
        android:text="Bienvenido,"
        android:layout_marginTop="24sp"
        android:layout_marginLeft="20sp"
        android:textColor="@color/azulpetro"
        android:textSize="48sp"  />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="237dp"
        android:layout_height="37dp"
        android:fontFamily="@font/alatsi"
        android:text="Selecciona tu unidad"
        android:textColor="@color/azulpetro"
        android:textSize="24sp"
        android:layout_marginLeft="20sp"/>

    <LinearLayout
        android:id="@+id/linearLayoutPipa"
        android:layout_width="317dp"
        android:layout_height="48dp"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="35sp"
        android:layout_marginRight="20sp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/Pipa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2sp"
            android:drawableStart="@drawable/ic_pipa_icono"
            android:fontFamily="sans-serif-medium"
            android:text="@string/pipa"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinnerPipa"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="50"
            android:background="@drawable/spinner_bg"
            android:foreground="@drawable/ic_arrow_down"
            android:foregroundGravity="center|right"
            android:textSize="20sp"
            tools:ignore="SpeakableTextPresentCheck" />


    </LinearLayout>

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="127dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@color/azulpetro"
        android:fontFamily="@font/alatsi"
        android:text="Guardar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />
</LinearLayout>